APP_NAME="Dixis Testing"
APP_ENV=testing
APP_KEY=base64:test-key-for-testing-only-not-for-production
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Testing Database
DB_CONNECTION=sqlite
DB_DATABASE=database/testing.sqlite

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Testing
MAIL_MAILER=array
MAIL_FROM_ADDRESS="test@dixis.gr"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe Test Keys
STRIPE_KEY=pk_test_dummy
STRIPE_SECRET=sk_test_dummy
STRIPE_WEBHOOK_SECRET=whsec_test_dummy

# AWS (if needed for tests)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Testing specific settings
TESTING_SEED_DATABASE=false
TESTING_PARALLEL=false