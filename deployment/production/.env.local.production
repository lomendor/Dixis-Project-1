# Image optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_DOMAINS=dixis.gr,cdn.dixis.gr

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
DEBUG_MODE=false
MOCK_API_ENABLED=false
LOG_LEVEL=error

# Performance monitoring
ENABLE_REMOTE_LOGGING=true
MONITORING_URL=https://monitoring.dixis.gr/api
